  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "yarn build && yarn start",
    "ext": "ts"
  },
  "dependencies": {
    "@types/express": "^4.17.1",
    "@types/node": "^12.7.1",
    "bcrypt": "^5.0.0",
