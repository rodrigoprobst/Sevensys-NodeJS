    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-basic-auth": "^1.2.0",
    "express-http-proxy": "^1.5.1",
    "express-rate-limit": "^5.0.0",
    "helmet": "^3.20.0",
    "http": "^0.0.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^1.6.5",
    "os": "^0.1.1",
    "reflect-metadata": "^0.1.13",
    "require-dir": "^1.2.0",
